@model IEnumerable<Category>

	 @foreach (var mainCategory in Model.Where(c=>c.IsActive && c.IsTopMenu && c.ParentId==0))
	 {
	<div class="dropdown">
		<a class="btn dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
			@mainCategory.Name
		</a>

		<ul class="dropdown-menu">
			@foreach (var item in Model.Where(c => c.IsActive && c.ParentId == mainCategory.Id))
			{
				<li><a class="dropdown-item" href="/Categories/Index/@item.Id">@item.Name</a></li>
			}
		</ul>
	</div>
	 }

